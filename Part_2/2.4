version : '3.8'

services:
  backend:
    image: backend:v3
    ports: 
      - 1234:8080
    command: ["./server"]
    environment:
      - REDIS_HOST=redis
  
  frontend:
    image: frontend:v2
    ports:
      - 5000:5000
    command: ["serve", "-s", "-l", "5000", "build"]

  redis:
    image: redis:alpine
